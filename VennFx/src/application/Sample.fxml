<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="border1" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
  <!-- TODO Add Nodes -->
  <center>
    <Pane fx:id="pane" prefHeight="491.0" prefWidth="275.0">
      <children>
        <TextField fx:id="textField" layoutX="362.0" layoutY="16.0" prefWidth="200.0" promptText="Write you words here" />
        <Circle fx:id="circleLeft" fill="WHITE" layoutX="300.0" layoutY="315.0" onDragOver="#DragOverCircleLeft" radius="196.0" stroke="BLACK" strokeType="INSIDE" />
        <Circle fx:id="circleRight" fill="#ffffff99" layoutX="600.0" layoutY="315.0" opacity="1.0" radius="190.5" stroke="BLACK" strokeType="INSIDE" />
        <Button fx:id="button" layoutX="562.0" layoutY="15.0" mnemonicParsing="false" onAction="#buttonClicked" text="Create" />
        <Label fx:id="label" layoutX="132.0" layoutY="60.0" onDragDropped="#labelDragDropped" onMouseDragged="#labelMouseDragged" onMouseEntered="#labelMouseEntered" onMousePressed="#labelMousePressed" onMouseReleased="#labelMouseReleased" text="" />
        <Button fx:id="file" layoutX="44.0" layoutY="14.0" mnemonicParsing="false" onAction="#fileButtonClicked" text="Upload a word file" />
        <ColorPicker fx:id="colorLeft" layoutX="60.0" layoutY="125.0" onAction="#colorLeftClicked" />
        <ColorPicker fx:id="colorRight" layoutX="778.0" layoutY="125.0" onAction="#colorRightClicked" />
        <ColorPicker fx:id="textColor" layoutX="658.0" layoutY="17.0" prefWidth="46.0" />
        <Pane fx:id="bottomPane" layoutX="34.0" layoutY="233.0">
          <children>
            <Button fx:id="newCircle" layoutX="46.0" layoutY="264.0" mnemonicParsing="false" onAction="#createNewCircle" text="New Circle" />
            <Pane fx:id="pane1" layoutX="294.0" layoutY="89.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                  <Button fx:id="screenshot" layoutX="34.0" layoutY="189.0" mnemonicParsing="false" onAction="#saveAsPng" text="Take a Screen Shot" />
                     </children></Pane>
            <Button fx:id="resize" layoutX="705.0" layoutY="264.0" mnemonicParsing="false" onAction="#circleResize" text="Resize" />
          </children>
        </Pane>
        <TextField fx:id="leftTitle" depthTest="DISABLE" focusTraversable="false" layoutX="325.0" layoutY="65.0" onAction="#textFieldClicked" prefWidth="200.0" promptText="Enter Title Here..." />
      </children>
    </Pane>
  </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox>
               <children>
                  <TextField promptText="Enter Title Here..." />
                  <Button contentDisplay="TEXT_ONLY" mnemonicParsing="false" text="Insert" />
                  <Button contentDisplay="CENTER" mnemonicParsing="false" text="B" />
                  <Button contentDisplay="CENTER" mnemonicParsing="false" text="I" />
                  <ColorPicker />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<BorderPane fx:id="border1" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
  <!-- TODO Add Nodes -->
  <center>
    <Pane fx:id="pane" prefHeight="491.0" prefWidth="275.0">
      <children>
        <Circle fx:id="circleLeft" fill="WHITE" layoutX="300.0" layoutY="315.0" onDragOver="#DragOverCircleLeft" radius="196.0" stroke="BLACK" strokeType="INSIDE" />
        <Circle fx:id="circleRight" fill="#ffffff99" layoutX="600.0" layoutY="315.0" opacity="1.0" radius="190.5" stroke="BLACK" strokeType="INSIDE" />
        <Label fx:id="label" layoutX="132.0" layoutY="60.0" onDragDropped="#labelDragDropped" onMouseDragged="#labelMouseDragged" onMouseEntered="#labelMouseEntered" onMousePressed="#labelMousePressed" onMouseReleased="#labelMouseReleased" text="" />
        <ColorPicker fx:id="colorLeft" layoutX="60.0" layoutY="125.0" onAction="#colorLeftClicked" />
        <ColorPicker fx:id="colorRight" layoutX="778.0" layoutY="125.0" onAction="#colorRightClicked" />
        <Pane fx:id="bottomPane" layoutX="34.0" layoutY="233.0">
          <children>
            <Button fx:id="newCircle" layoutX="39.0" layoutY="239.0" mnemonicParsing="false" onAction="#createNewCircle" text="New Circle" />
            <Button fx:id="resize" layoutX="705.0" layoutY="264.0" mnemonicParsing="false" onAction="#circleResize" text="Resize" visible="false" />
          </children>
        </Pane>
      </children>
    </Pane>
  </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Exit" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Open">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#fileButtonClicked" text="Upload a Word File" />
                        <MenuItem mnemonicParsing="false" text="Basic Template" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Save">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#saveAsPng" text="Screenshot" />
                        <MenuItem mnemonicParsing="false" text="Venn File" />
                     </items>
                  </Menu>
              </menus>
            </MenuBar>
            <HBox>
               <children>
                  <TextField fx:id="textField" promptText="Enter Title Here...">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></TextField>
                  <Button fx:id="insert" contentDisplay="TEXT_ONLY" mnemonicParsing="false" onAction="#buttonClicked" text="Insert">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
                  <Button fx:id="bold" contentDisplay="CENTER" mnemonicParsing="false" text="B" />
                  <Button fx:id="italic" contentDisplay="CENTER" mnemonicParsing="false" text="I" />
                  <ColorPicker fx:id="textColor" editable="true" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    				<value>
      				  <Color blue="0.0" green="0.0" red="0.0" />
  					  </value>
					</ColorPicker>
                  <ColorPicker fx:id="textBackground" editable="true" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    				<value>
      				  <Color blue="1.0" green="1.0" red="1.0" />
  					  </value>
					</ColorPicker>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
